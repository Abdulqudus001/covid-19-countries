<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>COVID19 Stats</title>
</head>
<body>
  <table>
    <thead>
      <th>Country</th>
      <th>Total Cases</th>
    </thead>
    <tbody>
      <% countries.forEach(country => { %>
        <tr>
          <td><a href="update/<%= country.name %> "><%= country.name %></a></td>
          <td><%= country.states.reduce((acc, el) => acc += el.cases, 0) || 0 %> </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>